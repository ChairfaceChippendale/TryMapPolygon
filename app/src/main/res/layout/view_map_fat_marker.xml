<?xml version="1.0" encoding="utf-8"?>
<!-- id must be `amu_text` to work well with com.google.maps.android.ui.IconGenerator-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/amu_text"
        style="@style/AppText.MapMarker.Selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:background="@drawable/ic_pin_fat"
        tools:textColor="@color/appWhite"
        tools:text="$" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        tools:background="#81DDDDDD"
        android:layout_gravity="center"
        tools:ignore="ContentDescription" />

</FrameLayout>


